<div class="container">
  <h2><%= @recipe.name %></h2>
  <h4>Here's how we rated it: <%= @recipe.rating%></h4>
  <div class="row">
    <div class="col-md-6">
      <% if @recipe.ingredients.any? %>
        <h3>Ingredients</h3>
        <hr>

        <% @recipe.ingredients.each do |ingredient| %>
          <ul>
            <li>
              <%= link_to ingredient.item, recipe_ingredient_path(@recipe, ingredient) %> <%= ingredient.amount %>
            </li>
          </ul>
        <% end %>
      <% else %>
        <p>No ingredients have been published for this recipe!</p>
      <% end %>

      <% if @recipe.instructions.any? %>
        <h3>Instructions</h3>
        <hr>
        <% @recipe.instructions.each do |instruction| %>
          <ul>
            <li>
              <%= link_to instruction.step, recipe_instruction_path(@recipe, instruction) %>. <%= instruction.direction %>
            </li>
          </ul>
        <% end %>
      <% else %>
        <p>No instructions have been published for this recipe!</p>
      <% end %>

      <% if @recipe.tags.any? %>
        <h3>Tags</h3>
        <hr>
        <% @recipe.tags.each do |tag| %>
          <ul>
            <li>
              <%= tag.category %> 
            </li>
          </ul>
        <% end %>
      <% else %>
        <p>No tag(s) for this recipe!</p>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="panel">
        <%# <div class="panel-heading"> %>
          <h4 class="panel-heading">Edits</h4>
          <div class="panel-body">
            <p><%= link_to "Want to add an ingredient that's missing?", new_recipe_ingredient_path(@recipe) %></p>
            <p><%= link_to "Want to add instructions that are missing?", new_recipe_instruction_path(@recipe) %></p>
            <p><%= link_to "Add a tag?", new_recipe_tag_path(@recipe) %></p>
            <p><%= link_to "Delete", recipe_path(@recipe), :data => {:confirm => "You sure?", :method => "Delete"} %></p>
            <p><%= link_to "Edit Recipe Details", edit_recipe_path(@recipe)%>
            <p><%= link_to "Return to recipes", recipes_path%></p>
          </div>
        <%# </div> %>
      </div>
    </div>
  </div>
</div>